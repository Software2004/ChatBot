<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">


    <TextView
        android:id="@+id/title"
        style="@style/Base.Theme.Gemini.textHeadingLarge"
        android:layout_width="0dp"
        android:alpha="0.8"
        android:background="@drawable/outlined_card"
        android:paddingHorizontal="25dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:paddingVertical="20dp"
        android:text="@string/chat"
        app:drawableEndCompat="@drawable/angle_small_down"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:subtitle="Tap to open in Chrome"
        app:title="Report Something" />


    <TextView
        android:id="@+id/c1"
        style="@style/chatComp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"

        android:text="It's a Great day to talk!\nHow can we help you today!"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <TextView
        android:id="@+id/c2"
        style="@style/chatUser"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/round_card_3sides_usr_chat"
        android:text="I want to Study Abroad!"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/c1" />

    <TextView
        android:id="@+id/c3"
        style="@style/chatUser"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        android:text="I need to ask something else!"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/et"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/c4"
        style="@style/chatUser"
        android:layout_marginBottom="10dp"
        android:text="What options are available to me!"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/c3"
        app:layout_constraintEnd_toEndOf="@id/c3" />

    <TextView
        android:id="@+id/c5"
        style="@style/chatUser"
        android:layout_marginBottom="10dp"
        android:text="I want to Work Abroad!"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/c4"
        app:layout_constraintEnd_toEndOf="@id/c3" />

    <TextView
        android:id="@+id/c6"
        style="@style/chatUser"
        android:layout_marginBottom="10dp"
        android:text="I want to Study Abroad!"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/c5"
        app:layout_constraintEnd_toEndOf="@id/c3" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:id="@+id/rcvChat"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        tools:itemCount="3"
        tools:listitem="@layout/chat_item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintBottom_toTopOf="@id/et"/>

    <EditText
        android:id="@+id/et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/outlined_full_round_card"
        android:drawableStart="@drawable/mynaui__chat"
        android:drawablePadding="15dp"
        android:hint="Type Something..."
        android:paddingHorizontal="20dp"
        android:paddingVertical="15dp"
        android:textSize="16sp"
        android:inputType="textMultiLine"
        android:maxLines="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/send"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/send"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:enabled="false"
        android:layout_marginEnd="15dp"
        android:background="@drawable/btn_click_effect"
        app:icon="@drawable/round_send_24"
        app:iconSize="25dp"
        android:paddingStart="14dp"
        app:layout_constraintBottom_toBottomOf="@id/et"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/et"
        />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progress_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        app:indicatorSize="30dp"
        app:indicatorColor="?colorPrimary"
        app:trackColor="?colorPrimary"
        app:trackThickness="2dp"
        android:visibility="gone"
        app:indeterminateAnimationType="disjoint"
        app:layout_constraintTop_toTopOf="@id/title"
        app:layout_constraintBottom_toBottomOf="@id/title"
        android:layout_marginEnd="18.5dp"
        android:layout_marginBottom="5.8dp"
        app:layout_constraintEnd_toEndOf="@id/title"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
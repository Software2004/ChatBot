<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="10dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profile_pic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/usern"
        android:scaleType="centerCrop"
        android:padding="2dp"
        app:contentPadding="10dp"
        app:strokeWidth="1dp"
        app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full"
        app:strokeColor="?android:textColorSecondary"
        android:background="@drawable/full_round_outlined"
        android:contentDescription="profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/sender_name"
            android:textSize="12sp"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ali Hassan"
            android:textStyle="bold"
            android:textColor="?colorPrimary"
            app:layout_constraintStart_toEndOf="@id/profile_pic"
            app:layout_constraintTop_toTopOf="@id/profile_pic"/>

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today at 9:18 AM"
        android:textSize="10sp"
        android:layout_marginStart="10dp"
        android:textColor="?android:textColorSecondary"
        app:layout_constraintStart_toEndOf="@id/sender_name"
        app:layout_constraintTop_toTopOf="@id/sender_name"
        app:layout_constraintBottom_toBottomOf="@id/sender_name"/>
        <TextView
            android:id="@+id/message"
            android:layout_width="0dp"
            android:paddingEnd="15dp"
            android:layout_height="wrap_content"
            android:text="Oh is that new avatar from that photoshop. looks great!"
            app:layout_constraintStart_toStartOf="@id/sender_name"
            app:layout_constraintTop_toBottomOf="@id/sender_name"
            app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:visibility="gone"
        android:id="@+id/divider9"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="?colorButtonNormal"
        app:layout_constraintStart_toStartOf="@id/sender_name"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/message"
        app:layout_constraintEnd_toEndOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>

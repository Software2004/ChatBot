<?xml version="1.0" encoding="utf-8"?>
<selector android:exitFadeDuration="200" xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <solid android:color="?backgroundColor"/>
            <corners android:radius="100dp"/>
        </shape>
    </item><item android:state_pressed="false">
    <shape
        android:shape="rectangle">
        <solid android:color="?cardBackgroundColor"/>
        <corners android:radius="100dp"/>
    </shape>
</item>

</selector>